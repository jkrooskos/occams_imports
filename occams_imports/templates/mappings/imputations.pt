<html metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <!-- ko ifnot: isReady -->
      <div class="text-center">
        <span i18n:translate="">Loading...</span>
        <span class="fa fa-refresh fa-spin"></span>
      </div>
    <!-- /ko -->

    <div style="display: none;" data-bind="visible: isReady">
      <header class="page-header">
        <h1 i18n:translate="">Imputation Mapping</h1>
      </header>

      <!-- ko template: {name: 'alertTemplate', data: alert, if: alert} -->
      <!-- /ko -->

      <form class="form-horizontal">

        <!-- ko with: mapping -->

          <!-- ko template: {name: 'variableTemplate', data: target} --><!-- /ko -->

          <!-- ko with: target -->
            <!-- ko with: attribute -->
              <!-- ko if: hasChoices -->
                <div class="form-group">
                  <label class="control-label required col-sm-2"
                         for="direct_version">Map To:</label>
                  <div class="col-sm-6">
                    <input type="hidden"
                           class="form-control"
                           data-placeholder="Choice to be mapped"
                           i18n:attributes="data-placeholder"
                           tal:define="
                              ajax  request.route_path('imports.schemas');"
                           data-bind="selectedData: $parent.choice,
                                      dataKey: 'name',
                                      dataLabel: 'toString',
                                      select2: {
                                        ajax: {
                                            url: '${ajax}',
                                            data: $parent.select2AttributeParams,
                                            results: $parent.select2AttributeResults,
                                        }
                                      }" />
                  </div>
                </div> <!-- /.form-group -->
              <!-- /ko --> <!-- /if -->
            <!-- /ko --> <!-- /with -->
          <!-- /ko --> <!-- /with -->

          <hr />

          <!-- ko template: {name: 'bucketTemplate', foreach: buckets} --><!-- /ko -->

          <hr />

          <div class="form-group">
            <label class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
              <textarea class="form-control"
                        name="description"
                        data-bind="value: description"></textarea>
            </div>
          </div> <!-- /.form-group -->

        <!-- /ko -->

        <hr />

        <div class="pull-right">
          <a class="btn btn-link"
             href="${request.current_route_path(_route='imports.index')}">
            Cancel
          </a>
          <button class="btn btn-primary"
                  type="button"
                  data-bind="click: saveImputation">Save</button>
        </div>

      </form>

    </div> <!-- /isReady -->

    <script type="text/html" id="alertTemplate">
      <div data-bind="css: css">
        <!-- ko if: title -->
          <strong data-bind="text: title"></strong>
        <!-- /ko -->
        <span data-bind="text: message"></span>
      </div>
    </script>


    <script type="text/html" id="bucketTemplate">
      <div class="panel panel-default">

        <div class="panel-heading">
          <div class="pull-right">
            <button type="button" class="close" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="clearfix"></div>
        </div> <!-- /.panel-heading -->

        <div class="panel-body">

          <form class="form-horizontal" role="form">

            <!-- ko foreach: conversions -->

              <!-- first bucket should not display operators-->
              <!-- ko if: operator -->
                <!--ko if: $index == 0 -->
                  <hr />
                <!-- /ko -->
                <div class="form-group">
                  <div class="col-sm-2">
                    <select class="form-control"
                            data-bind="options: mathOperators,
                                       value: operator,
                                       optionsCaption: 'Select...',
                                       select2: {minimumResultsForSearch: -1}"></select>
                  </div>
                  <div class="col-sm-3">
                    <select class="form-control"
                            data-bind="select2: {minimumResultsForSearch: -1}">
                      <option></option>
                      <option data-bind="attr: {selected: byValue}">By Value </option>
                      <option data-bind="attr: {selected: byVariable}">By Variable</option>
                    </select>
                  </div>

                  <!-- ko if: byValue -->
                    <div class="col-sm-3">
                      <input class="form-control" type="number" data-bind="value: value" />
                    </div>
                  <!-- /ko -->
                </div> <!-- /.form-group -->
              <!-- /ko  --> <!-- /if operator -->

              <!-- ko if: byVariable -->
                <!-- ko template: { name: 'variableTemplate', data: value } --><!-- /ko -->
              <!-- /ko --> <!-- /if -->

              <hr />

            <!-- /ko --> <!-- /foreach conversions-->

          </form>

          <form class="form-horizontal">
            <div class="form-group">
              <div class="col-md-2 col-md-offset-3">
                <button type="button"
                        class="btn btn-default dropdown-toggle"
                        data-toggle="dropdown">options
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a data-bind="click: $root.addConversion">Add Operation</a></li>
                  <!-- ko if: $data.conversions().length > 1 -->
                  <li><a data-bind="click: $root.deleteConversion">Remove Operation</a></li>
                  <!-- /ko -->
                </ul>
              </div> <!-- btn-group-->

              <div class="col-md-1 col-md-offset-4">
                <button type="button"
                        class="btn btn-default"
                        data-bind="click: $root.addBucket">
                   <span class="glyphicon glyphicon-plus-sign"></span>
                 </button>
              </div>
            </div>
          </form>

          <hr />

          <form class="form-horizontal">

            <!-- ko with: imputation -->

              <div class="form-group">
                <label class="control-label col-sm-2">Match</label>
                <!-- ko if: hasMultiple -->
                  <div class="col-sm-2">
                      <select class="form-control"
                              data-bind="options: availableOperators,
                                         optionsText: 'title',
                                         optionsCaption: 'Select...',
                                         value: operator,
                                         select2: {}"></select>
                  </div>
                <!-- /ko -->
                <!-- ko ifnot: hasMultiple -->
                  <div class="col-sm-10">
                    <strong>the followlling rule</strong>
                  </div>
                <!-- /ko -->
              </div> <!-- /.form-group -->

              <!-- ko foreach: imputations -->
                <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-2">
                    <select class="form-control"
                            data-bind="options: availableOperators,
                                       optionsText: 'title',
                                       optionsCaption: 'Select...',
                                       optionsValue: 'name',
                                       value: operator,
                                       select2: {minimumResultsForSearch: -1}"></select>
                  </div>
                  <div class="col-sm-2">
                    <input type="text"
                           class="form-control"
                           data-bind="value: value" />
                  </div>
                </div>
              <!-- /ko -->

            <!-- /ko --> <!-- /with -->

          </form>

        </div> <!-- /.panel-body -->

      </div> <!-- /.panel -->
    </script>

    <script type="text/html" id="variableTemplate">
      <div class="form-group">

        <label class="control-label required col-sm-2"
               for="site_forms">Variable:</label>

        <div class="col-sm-6">
          <div class="input-group select2-bootstrap-append">
            <input type="hidden"
                   class="form-control"
                   data-placeholder="Select a form..."
                   i18n:attributes="data-placeholder"
                   tal:define="ajax  request.route_path('imports.schemas');"
                   data-bind="selectedData: schema,
                              dataKey: 'name',
                              dataLabel: 'name',
                              select2: {
                                ajax: {
                                    url: '${ajax}',
                                    data: $data.select2SchemaParams,
                                    results: $data.select2SchemaResults,
                                }
                              }" />
            <div class="input-group-addon">
              <!-- ko with: schema -->
                <span>v</span><span data-bind="text: publish_date"></span>
              <!-- /ko --> <!-- /with -->
            </div> <!-- /.input-group-addon -->
          </div> <!-- /.input-group -->
        </div> <!-- /.col-sm-5-->

        <div class="col-sm-4">
          <div class="input-group select2-bootstrap-append">
            <!-- ko ifnot: attribute -->
              <input type="text"
                     readonly="readonly"
                     class="form-control"
                     placeholder="Variable to be mapped"></input>
              <span class="input-group-addon">Type</span>
            <!-- /ko --><!-- /ifnot -->
            <!-- ko if: attribute -->
              <input type="hidden"
                     class="form-control"
                     data-placeholder="Variable to be mapped"
                     i18n:attributes="data-placeholder"
                     tal:define="
                        ajax  request.route_path('imports.schemas');"
                     data-bind="selectedData: attribute,
                                dataKey: 'name',
                                dataLabel: 'name',
                                select2: {
                                  ajax: {
                                      url: '${ajax}',
                                      data: $parent.select2AttributeParams,
                                      results: $parent.select2AttributeResults,
                                  }
                                }" />
              <!-- ko with: attribute -->
                <span class="input-group-addon">
                  <a href="#" data-bind="text: type, tooltip: { title: title, placement: 'bottom' }"></a>
                </span>
              <!-- /ko -->
            <!-- /ko --> <!-- /if -->
          </div> <!-- /.input-group -->
        </div> <!-- /.col-sm-5 -->

      </div> <!-- /.form-group -->

    </script> <!-- /#variableTemplate -->


  </metal:content-slot>

  <metal:javascript-slot fill-slot="javascript-slot">
    <script type="text/javascript">
      $(function(){
        ko.applyBindings(new MappingView());
      });
    </script>
  </metal:javascript-slot>

</html>
