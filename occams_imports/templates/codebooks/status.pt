<html metal:use-macro="load: ../master.pt">
  <metal:content-slot fill-slot="content-slot">

    <br />

    <div class="jumbotron">
      <h1 i18n:translate="">Codebook Import Status</h1>
      <p i18n:translate="">
        Records processed:  ${record_count} <br />
        Records inserted:  ${inserted_count} <br />
        Errors: ${error_count}
      </p>
      <p i18n:translate="" tal:condition="errors">
        <br />
        <table class="table-bordered">
          <thead>
            <tr>
              <th>Schema Name</th>
              <th>Schema Title</th>
              <th>Name</th>
              <th>Title</th>
              <th>Errors</th>
            </tr>
          </thead>
            <tr tal:repeat="error errors">
              <th>${error.schema_name}</th>
              <th>${error.schema_title}</th>
              <th>${error.name}</th>
              <th>${error.title}</th>
              <th>${error.errors}</th>
            </tr>
        </table>

      </p>

    </div>

  </metal:content-slot>
</html>
